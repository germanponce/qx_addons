<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- Esto es para indicarle al sistema que con esto vamos a grabar en odoo este tipo de modelo-->
		<record id="autos_catalogo_tipo_transmision_tree" model="ir.ui.view">
			<field name="name">autos.catalogo.tipo.transmision.tree</field>
			<field name="model">autos.catalogo.tipo.transmision</field>
			<field name="arch" type="xml">
				<tree string = "Tipos de transmision">
					<field name="descripcion" />
				</tree>
				
			</field>
		</record>
		<!-- Esto es para indicarle al sistema que con esto vamos a grabar en odoo este tipo de modelo-->
		<record id="autos_catalogo_tipo_transmision_form" model="ir.ui.view">
			<field name="name">autos.catalogo.tipo.transmision.form</field>
			<field name="model">autos.catalogo.tipo.transmision</field>
			<field name="arch" type="xml">
				<form string = "Tipos de transmision" version="9.0">
					<sheet>
						<group > <!-- colspan/col -->
							<field name="descripcion" />
						</group>
					</sheet>
				</form>
				
			</field>
		</record>

	<!-- Esto es para indicarle al sistema que con esto vamos a grabar en odoo este tipo de modelo-->
		<record id="autos_catalogo_tipo_transmision_action" model="ir.actions.act_window">
			<field name="name">Tipos de Transmision</field>
			<field name="res_model">autos.catalogo.tipo.transmision</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click en crear para un nuevo tipo de transmision.
				</p>
			</field>
		</record>	

	</data>
	
</openerp>
